<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.growthMonitoring.BioFertilizerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFarmerRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appColor"
                android:gravity="center"
                android:padding="10dp"
                android:text="Bio Fertilizers"
                android:textSize="50dp" />
            <TextView
                android:id="@+id/txtComplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/appColor"
                android:gravity="center"
                android:padding="10dp"
                android:text="Complain"
                android:textSize="36dp" />
            <LinearLayout
                android:id="@+id/linearImages"
                android:layout_below="@id/txtFarmerRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_picture_first_plot"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:src="@drawable/farmer_pic" />

                <ImageView
                    android:id="@+id/img_picture_first_pattadhar"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_farmer" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/linearImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerBio"/>

            <TextView
                android:id="@+id/txtSave"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_below="@id/recyclerBio"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_corner_orange"
                android:gravity="center"
                android:text="Submit"
                android:textSize="30sp" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>