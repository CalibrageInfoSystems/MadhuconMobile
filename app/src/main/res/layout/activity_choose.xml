<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="vertical">-->

<!--                        <ImageView-->
<!--                            android:layout_width="@dimen/_90sdp"-->
<!--                            android:layout_height="@dimen/_90sdp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_marginTop="@dimen/_10ssp"-->
<!--                            android:background="@drawable/measure_plot"-->
<!--                            android:backgroundTint="#034813"/>-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:fontFamily="@font/montserrat_medium"-->
<!--                            android:padding="@dimen/_5ssp"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textStyle="bold"-->
<!--                            android:text="Agreemented Area"-->
<!--                            android:textSize="@dimen/_10ssp" />-->

<!--                    </LinearLayout>-->

<!--                </androidx.cardview.widget.CardView>-->


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFramer"
                android:padding="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot Offer"
                android:drawableTop="@drawable/ic_baseline_local_offer_24"
                android:background="@color/appColor"
                android:textColor="@color/black"
                android:textSize="30dp"/>

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/txtPlot"
                android:padding="30dp"
                android:layout_width="wrap_content"
                android:background="@color/appColor"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_baseline_area_chart_24"
                android:text="Measured Area"
                android:textColor="@color/black"
                android:textSize="30dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>