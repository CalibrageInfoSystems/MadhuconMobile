<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.growthMonitoring.MeasuredDetailsGrowthMonitoringActivity">
    <TextView
        android:id="@+id/txtFarmerRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="Measured"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/txtComplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:layout_gravity="end"
        android:gravity="center"
        android:padding="10dp"
        android:text="Complain"
        android:textSize="36dp" />

    <LinearLayout
        android:id="@+id/linearImages"
        android:layout_below="@id/txtFarmerRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_picture_first_plot"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/farmer_pic" />

        <ImageView
            android:id="@+id/img_picture_first_pattadhar"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_farmer" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Weed Status"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:text=":"
            android:textColor="@color/title_color_label"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
        <!--crop list-->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spWeedStatus"
            style="@style/CustomspinnersPadding5dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/rectangular_box"
            android:fontFamily="montserrat_regular"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Inter Croping"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:text=":"
            android:textColor="@color/title_color_label"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
        <!--crop list-->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spPreviousLandUse"
            style="@style/CustomspinnersPadding5dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/rectangular_box"
            android:fontFamily="montserrat_regular"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSave"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_bg_corner_orange"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="70dp"
        android:text="Submit"
        android:textSize="30sp" />


</LinearLayout>