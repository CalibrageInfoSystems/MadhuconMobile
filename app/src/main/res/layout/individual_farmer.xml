<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/_6sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingRight="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp">

<!--    <TextView-->
    <!--        android:id="@+id/txtFarmer"-->
<!--        android:padding="20dp"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:id="@+id/surface_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgFarmer"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/current_farmers"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />

                <TextView
                    android:id="@+id/txtViewPlot"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:padding="5dp"
                    android:text="View Plot"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_below="@+id/txtViewPlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_toRightOf="@+id/imgFarmer"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/txtFarmer"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtFarmerId"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer ID:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/txtFarmerFatherName"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father Name:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtFarmerMobileNo"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtVillage"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Village:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Address:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>