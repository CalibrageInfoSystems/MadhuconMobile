<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/_6sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingRight="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp">

<!--    <TextView-->
    <!--        android:id="@+id/txtFarmer"-->
<!--        android:padding="20dp"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:id="@+id/surface_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgPlot"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/farmer_pic"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />


                <TextView
                    android:layout_gravity="end"
                    android:id="@+id/txtPlotLocation"
                    android:layout_alignParentEnd="true"
                    style="@style/CustomEditTextPadding2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Plot ID:"
                    android:textColor="@color/color_text_gray"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_toRightOf="@+id/imgPlot"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">


                    <TextView
                        android:id="@+id/txtPlotId"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Plot ID:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtSurveyNo"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Survey no:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtPattadharBookNo"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Pattadhar book no:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtVillage"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Village:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtState"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Area:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtVariety"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Variety:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtPlantationDate"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:maxLength="28"
                        android:text="Plantation Date:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtFarmerCode"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:maxLength="28"
                        android:text="GL Code:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtFarmerName"
                        style="@style/CustomEditTextPadding2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:maxLength="28"
                        android:text="FarmerName:"
                        android:textColor="@color/color_text_gray"
                        android:visibility="gone" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>