<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LocationTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    TEXT INPUT & EDIT TEXT STYLING   -->
    <style name="TextInputLayoutErrorColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">@dimen/_6ssp</item>
    </style>
    <style name="CustomTextInputLayout">
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/my_font</item>
    </style>
    <style name="CustomEditText">
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyAlertDialogThemeNew" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">50%</item>
        <item name="windowFixedWidthMinor">60%</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!--    HEADERS STYLING   -->
    <style name="CustomHeaderLabel">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@color/bfil_green</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <!--    BUTTON STYLING   -->
    <style name="CustomBtnStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorButtonNormal">@color/bfil_blue</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    RADIO BUTTON STYLING   -->
    <style name="CustomRadioBtnTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bfil_blue</item>
        <item name="colorControlNormal">@color/bfil_blue</item>
    </style>
    <style name="CustomRadioBtnStyle">
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="CustomRadioBtnLblStyle">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!--    CHECK BOX STYLING   -->
    <style name="CustomCheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bfil_blue</item>
        <item name="colorControlActivated">@color/bfil_blue</item>
    </style>
    <style name="CustomCheckBoxStyle">
        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|left</item>
    </style>

    <!--    PROGRESS BAR STYLING   -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/bfil_blue</item>
    </style>

    <!--    SWITCH  STYLING   -->
    <style name="CustomSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bfil_blue</item>
        <item name="colorSwitchThumbNormal">@color/bfil_blue_overlay</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <!--  CUSTOM FONT STYLE -->
    <style name="CustomFontStyle"  parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/my_font</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CustomTextViewPadding5dp">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextViewPadding0dp">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomEditTextPadding5dp">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="CustomEditTextPadding2dp">
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="singleLine">true</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="CustomspinnersPadding5dp">
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@drawable/edt_disabled_color</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
    </style>

</resources>